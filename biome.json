{
	"$schema": "https://biomejs.dev/schemas/1.6.0/schema.json",
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true
		}
	},
	"javascript": {
		"formatter": {
			"semicolons": "asNeeded",
			"indentWidth": 2,
			"quoteStyle": "single"
		}
	},
	"formatter": {
		"indentWidth": 2,
		"indentStyle": "space"
	},
	"files": {
		"ignore": [
			"./dist/**/*"
		]
	}
}
